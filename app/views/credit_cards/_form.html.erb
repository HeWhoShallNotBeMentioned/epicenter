<%= form_for @credit_card, url: credit_card_path do |f| %>
  <%= render '/layouts/errors', object: @credit_card %>
  <div class="form-group">
    <%= f.label :name, "Name on card" %>
    <%= text_field_tag :name, nil, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :card_number %>
    <%= text_field_tag :card_number, nil, { class: 'form-control' } %>
  </div>

  <div class='form-group'>
    <%= f.label :expiration_month %>
    <%= text_field_tag :expiration_month, nil, { class: 'form-control' } %>
  </div>

  <div class='form-group'>
    <%= f.label :expiration_year %>
    <%= text_field_tag :expiration_year, nil, { class: 'form-control' } %>
  </div>

  <div class='form-group'>
    <%= f.label :cvc_code, "CVC code" %>
    <%= text_field_tag :cvc_code, nil, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :zip_code %>
    <%= text_field_tag :zip_code, nil, { class: 'form-control' } %>
  </div>

  <%= f.hidden_field :stripe_token %>

  <%= f.submit "Add credit card", class: "btn btn-info", id: "card-submit-button" %>
<% end %>
