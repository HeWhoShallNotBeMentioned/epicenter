<div class="student-div student-attendance">
  <table class="table table-hover">
    <thead>
      <th>Date</th>
      <th>Status</th>
      <th></th>
      <th>Pair</th>
    </thead>
    <% @course.class_dates_until(Time.zone.now.to_date).sort.reverse.each do |day| %>
      <tbody>
        <tr>
          <td class="col-xs-4">
            <%= day.strftime("%A, %B %d, %Y") %>
          </td>
          <td class="col-xs-2">
            <% if @student.attendance_record_on_day(day) == nil %>
              <span class="label label-primary" disabled>Absent</span>
            <% elsif @student.attendance_record_on_day(day).tardy %>
              <span class="label label-danger" disabled>Tardy</span>
            <% elsif @student.attendance_record_on_day(day).left_early %>
              <span class="label label-danger" disabled>Left early</span>
            <% else %>
              <span class="label label-success" disabled>On time</span>
            <% end %>
          </td>
          <td>
            <% if current_admin && can?(:manage, AttendanceRecord) %>
              <%= link_to 'Edit', new_attendance_record_amendment_path(student: @student, day: day), class: ''  %>
            <% end %>
          </td>
          <td>
            <%= @student.pair_on_day(day) ? @student.pair_on_day(day).name : 'Solo' %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
