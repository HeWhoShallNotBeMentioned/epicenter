<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, class: 'form-horizontal'} do |f| %>
  <%= devise_error_messages! %>

  <% if resource.is_a?(Student) %>
    <div class="form-group">
      <%= f.label :course_id, class: "col-xs-2 control-label" %>
      <div class="col-xs-6">
        <%= f.select(:course_id, Course.all.collect {|c| [ c.description, c.id ] }, {}, {class: "form-control"}) %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-xs-2 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

<% resource.class.invite_key_fields.each do |field| -%>
  <div class="form-group">
    <%= f.label field, class: "col-xs-2 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field field, class: "form-control" %>
    </div>
  </div>
<% end -%>

<div class="form-group">
  <div class="col-xs-offset-2 col-xs-6">
    <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-default" %>
  </div>
</div>
<% end %>
